<h1><%= @surgery.title %> on <%= @surgery.day %></h1>

<h2>Operating Room: <%= @surgery.operating_room_number %></h3>

<h3> Doctors: </h3>
<% @doctor_surgeries.each do |doctor_surgery| %>
    <p><%= Doctor.where(id: doctor_surgery.doctor_id).pluck(:name).reduce %></p>
<% end %>

<h4>Other surgeries happening this day of the week:</h4>
<p> <% @other_surgeries.each do |other_surgery| %> </p>
  <section id ="surgery-<%= other_surgery.id %>">
    <h2> <%= link_to other_surgery.title, "surgeries/#{other_surgery.id}" %></h2>
  </section>
<% end %>

<h2>Add A Doctor to this Surgery:</h2>
<%= form_tag "/doctor_surgeries/#{@surgery.id}" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= submit_tag 'Add Doctor' %>
<% end %>
